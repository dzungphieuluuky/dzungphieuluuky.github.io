---
layout: null
---
[
  {% for post in site.posts %}
    {
      "title": {{ post.title | jsonify }},
      "content": {{ post.content | strip_html | jsonify }},
      "excerpt": {{ post.excerpt | strip_html | jsonify }},
      "category": {{ post.tags | join: ', ' | jsonify }},
      "url": "{{ site.baseurl }}{{ post.url }}",
      "date": "{{ post.date | date: '%B %e, %Y' }}"
    }{% unless forloop.last %},{% endunless %}
  {% endfor %}
  {% if site.posts.size > 0 and site.html_pages.size > 0 %},{% endif %}
  {% for page in site.html_pages %}
    {% if page.title != "404 - Page not found" and page.title != "Search" and page.title != null %}
    {
      "title": {{ page.title | jsonify }},
      "content": {{ page.content | strip_html | jsonify }},
      "excerpt": {{ page.excerpt | strip_html | strip | jsonify | default: page.title | jsonify }},
      "category": "page",
      "url": "{{ site.baseurl }}{{ page.url }}",
      "date": ""
    }{% unless forloop.last %},{% endunless %}
    {% endif %}
  {% endfor %}
]